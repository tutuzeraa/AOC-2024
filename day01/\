import Data.List

groupAdjacent :: [Int] -> [[Int]]
groupAdjacent [] = []
groupAdjacent [x] = [[x]]
groupAdjacent (x:y:xs) = [x,y] : groupAdjacent xs

parseInput :: [Int] -> [[Int]]
parseInput xs = transpose $ groupAdjacent xs

solve :: [[Int]] -> Int
solve xs = sum $ zipWith (\x y -> abs(x-y)) (sort (head xs)) (sort (head (tail xs))) 

main :: IO()
main = interact $ show . solve . parseInput . words

